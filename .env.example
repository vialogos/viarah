# Copy to `.env` for local dev (do not commit `.env`).
DJANGO_SETTINGS_MODULE=viarah.settings.dev
DJANGO_DEBUG=1
DJANGO_SECRET_KEY=dev-insecure-change-me
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Needed for session+CSRF auth when the SPA runs on a different origin (Vite dev server).
CSRF_TRUSTED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Absolute SPA base URL used for links in emails (invites, password reset).
PUBLIC_APP_URL=http://localhost:5173

# Postgres via Docker Compose `db` service by default.
DATABASE_URL=postgres://viarah:viarah@db:5432/viarah

# Redis broker via Docker Compose `redis` service by default.
CELERY_BROKER_URL=redis://redis:6379/0

# Optional: worker log heartbeat interval.
CELERY_HEARTBEAT_SECONDS=30

# Web Push / PWA (Issue #20)
# VAPID public/private keys are Base64URL (no padding).
WEBPUSH_VAPID_PUBLIC_KEY=
WEBPUSH_VAPID_PRIVATE_KEY=
WEBPUSH_VAPID_SUBJECT=mailto:ops@example.com

# SMTP (MailHog in docker-compose by default; no secrets required for dev)
EMAIL_HOST=mailhog
EMAIL_PORT=1025
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=0
DEFAULT_FROM_EMAIL=no-reply@viarah.local

# PDF rendering (Issue #16)
# - Chromium path in container/runtime.
VIA_RAH_PDF_CHROME_BIN=/usr/bin/chromium
# - Set to 1 in environments where Chromium sandboxing isn't available (common in Docker).
VIA_RAH_PDF_NO_SANDBOX=1
# - Renderer subprocess timeout (seconds).
VIA_RAH_PDF_RENDER_TIMEOUT_SECONDS=90

# GitLab live links (Issue #12)
# - Required to store org GitLab tokens encrypted at rest (Fernet key; do not commit real values).
VIA_RAH_ENCRYPTION_KEY=
# - Optional: metadata refresh TTL (seconds).
GITLAB_METADATA_TTL_SECONDS=3600
